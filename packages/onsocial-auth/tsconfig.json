{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
