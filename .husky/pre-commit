#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check dependency versions before commit
echo "ğŸ” Checking dependency synchronization..."
node scripts/check-deps.js

# Auto-sync dependencies if there are mismatches
if [ $? -ne 0 ]; then
  echo "ğŸ”„ Auto-syncing dependencies..."
  node scripts/sync-deps.js
  echo "âœ… Dependencies synced! Please review and commit again."
  exit 1
fi

echo "âœ… All dependencies are in sync!"
