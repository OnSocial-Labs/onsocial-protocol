# =============================================================================
# OnSocial Production Environment Variables
# =============================================================================
# Copy to .env.production and fill in real values
# Usage: docker compose -f docker-compose.production.yml --env-file .env.production up -d

# ---------- PostgreSQL ----------
POSTGRES_USER=onsocial
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_DB=onsocial_indexer

# ---------- Hasura ----------
HASURA_ADMIN_SECRET=CHANGE_ME_hasura_admin_secret

# ---------- Gateway ----------
JWT_SECRET=CHANGE_ME_jwt_secret_min_32_chars
LIGHTHOUSE_API_KEY=CHANGE_ME_lighthouse_api_key

# ---------- NEAR Network ----------
NEAR_NETWORK=testnet
NEAR_RPC_URL=https://rpc.testnet.near.org

# ---------- Relayer ----------
RELAYER_CONTRACT_ID=core.onsocial.testnet
RELAYER_KEYS_JSON=CHANGE_ME_relayer_keys_json
